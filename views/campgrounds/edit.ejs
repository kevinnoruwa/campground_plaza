<% layout("layouts/boilerplate.ejs") %>
    

    <div class="row user-container">
        <h1 class="text-center">Edit campground</h1>
        <div class="col-6 offset-3" >
            
    <form action="/campgrounds/<%=campground._id%>?_method=put" method="post" class="validated-form" novalidate>
        <div class=" mb-3">
            <label class="form-label" for="">Title</label>
            <input class="form-control" type="text" value="<%=campground.title%>" name="campground[title]" required>
            
        </div>
        <div class=" mb-3">
            <label class="form-label" for="">Location</label>
            <input  class="form-control" type="text"  value="<%=campground.location%>" name="campground[location]" required>
        </div>
        <div class=" mb-3">
            <label class="form-label" for="">Image url</label>
            <input  class="form-control" type="text"  value="<%=campground.image%>" name="campground[image]" required>
        </div>
        <div class=" mb-3">
            <label class="form-label" for="">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">$</span>
                <input value="<%=campground.price%>" name="campground[price]" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
              </div>
        </div>
        <div class=" mb-3">
            <label class="form-label" for="">Description</label>
            <textarea  class="form-control" type="text"   name="campground[description]" required><%=campground.description%></textarea>
        </div>
        <div class=" mb-3">
            <button class="btn btn-info">update campground</button>
        </div>
       
    </form>
       
 
             </div>
            
             <a href="/campgrounds/<%=campground._id%>">Back to campground</a>
        </div>
    </div>
 
 
    
